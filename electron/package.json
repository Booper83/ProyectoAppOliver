{
  "name": "mi-app-electron",
  "version": "1.0.0",
  "main": "main.js",
  "description": "Aplicación de escritorio con Electron y React",
  "author": "Tu Nombre",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "dev": "npx electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "electron-reload": "^2.0.0-alpha.1"
  },
  "devDependencies": {
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.miempresa.miapp",
    "productName": "MiApp",
    "copyright": "Copyright © 2025",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!dist",
      "!package-lock.json",
      "!src",
      "!README.md"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  }
}
